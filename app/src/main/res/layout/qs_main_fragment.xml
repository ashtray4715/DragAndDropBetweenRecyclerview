<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.ashtray.quicksettings.QSViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#DDDDDD">

        <!-- bottom panel -->
        <RelativeLayout
            android:id="@+id/bottom_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

            <TextView
                android:id="@+id/title_drag_and_drop_items"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:text="Drag and drop items"
                android:textSize="15sp"
                android:textColor="#000000"
                android:gravity="center"
                tools:ignore="HardcodedText"
                android:paddingLeft="10dp"
                android:paddingStart="10dp"
                android:paddingRight="0dp"
                android:paddingEnd="0dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_available_items"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/title_drag_and_drop_items"
                app:cardCornerRadius="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/title_available_items"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:text="Available items"
                        android:textSize="15sp"
                        android:textColor="#000000"
                        tools:ignore="HardcodedText"
                        android:paddingLeft="10dp"
                        android:paddingStart="10dp"
                        android:paddingRight="0dp"
                        android:paddingEnd="0dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_available_items"
                        android:layout_width="wrap_content"
                        android:layout_height="100dp"
                        android:layout_below="@+id/title_available_items"
                        android:orientation="horizontal"/>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/cv_available_items"
                android:orientation="horizontal"
                android:weightSum="2"
                android:baselineAligned="false"
                android:padding="10dp">

                <!-- cancel changes view -->
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/iv_cancel_changes"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/ic_launcher_background"
                        android:padding="5dp"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:id="@+id/tv_cancel_changes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@id/iv_cancel_changes"
                        android:text="Cancel"
                        android:textSize="13sp"
                        android:textColor="#000000"
                        tools:ignore="HardcodedText" />

                </RelativeLayout>

                <!-- apply changes view -->
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/iv_apply_changes"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/ic_launcher_background"
                        android:padding="5dp"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:id="@+id/tv_apply_changes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@id/iv_apply_changes"
                        android:text="Apply"
                        android:textSize="13sp"
                        android:textColor="#000000"
                        tools:ignore="HardcodedText" />

                </RelativeLayout>

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_above="@+id/bottom_layout">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_current_items"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal"/>

        </RelativeLayout>

    </RelativeLayout>

</layout>